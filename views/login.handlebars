<h2 class="text-2xl font-bold mb-4">Login</h2>

{{#if errorMessage}}
  <p class="text-red-500">{{errorMessage}}</p>
{{/if}}

<form action="/login" method="POST" class="flex flex-col">
  <div class="mb-4">
    <label for="username" class="block text-gray-700 font-bold mb-2">Username:</label>
    <input type="text" id="username" name="username" required class="bg-gray-200 rounded px-4 py-2 w-full focus:bg-white transition duration-500">
  </div>
  <div class="mb-4">
    <label for="password" class="block text-gray-700 font-bold mb-2">Password:</label>
    <input type="password" id="password" name="password" required class="bg-gray-200 rounded px-4 py-2 w-full focus:bg-white transition duration-500">
  </div>
  <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-500">Login</button>
</form>

<p class="mt-4">Don't have an account? <a href="/signup" class="underline">Sign up</a> now!</p>