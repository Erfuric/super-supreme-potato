<h2 class="text-xl font-semibold mb-4">Create Post</h2>

{{#if errorMessage}}
  <p class="text-red-500">{{errorMessage}}</p>
{{/if}}

<form action="/posts/create" method="POST">
  <div class="mb-4">
    <label for="title" class="block font-medium">Title:</label>
    <input type="text" id="title" name="title" required class="w-full p-2 border border-gray-300 rounded-lg shadow-sm">
  </div>
  <div class="mb-4">
    <label for="body" class="block font-medium">Body:</label>
    <textarea id="body" name="body" required class="w-full p-2 border border-gray-300 rounded-lg shadow-sm"></textarea>
  </div>
  <button type="submit" class="px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600">Create Post</button>
</form>
